<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CashierLoginFormController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true">
         <image>
            <Image url="@../../Assets/background-1.png" />
         </image>
      </ImageView>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#000000b9" height="379.0" layoutX="171.0" layoutY="10.0" opacity="0.8" stroke="#ffffff00" strokeType="INSIDE" width="265.0" />
      <Label layoutX="190.0" layoutY="19.0" text="CASHIER LOGIN" textFill="WHITE">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <TextField fx:id="txtGmailAddress" alignment="CENTER" layoutX="210.0" layoutY="202.0" prefHeight="31.0" prefWidth="186.0" promptText="Enter Gmail Address" />
      <TextField fx:id="txtPassword" alignment="CENTER" layoutX="210.0" layoutY="247.0" prefHeight="31.0" prefWidth="186.0" promptText="Enter Password" />
      <Label fx:id="lblWrongPassword" layoutX="197.0" layoutY="287.0" text="Your Gmail or Password was Incorrect" textFill="RED">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <JFXButton layoutX="265.0" layoutY="314.0" onAction="#btnLoginOnAction" prefHeight="26.0" prefWidth="75.0" style="-fx-background-color: #1e90ff;" text="Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </JFXButton>
      <Label layoutX="252.0" layoutY="351.0" onMouseClicked="#btnForgotPswOnMouseClicked" text="Forgot Password ?" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <JFXButton layoutX="479.0" layoutY="9.0" onAction="#btnHomeOnAction" prefHeight="25.0" prefWidth="55.0" style="-fx-background-color: red;" text="Home" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </JFXButton>
      <JFXButton layoutX="539.0" layoutY="9.0" onAction="#btnBackOnAction" prefHeight="25.0" prefWidth="55.0" style="-fx-background-color: red;" text="X" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </JFXButton>
   </children>
</AnchorPane>
